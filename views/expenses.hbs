<main>
    {{#if messages.error}}
    <section class="notifications">
        <p class="notification-message">{{messages.error}}</p>
    </section>
    {{/if}}
    <section class="actions">
        <form action="/refill/{{id}}" method="POST">
            <h2>Salary time? Refill your account amount.</h2>
            <input type="text" name="amount" id="refill-amount">
            <button type="submit">Refill</button>
        </form>
        <div>
            <h2>New expense comming up?</h2>
            <a href="/create">Add it now</a>
        </div>
    </section>

    <hr class="separator">

    {{#if expenses}}
    <table class="expenses">
        <thead>
            <tr>
                <th>Merchant</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Description</th>
            </tr>

        </thead>
        <tbody>
            {{#each expenses}}
            <tr>
                <td>
                    <p>{{this.merchant}}</p>
                    {{#if this.report}}
                    <div class="report">
                        <a href="/report/{{this._id}}">Report</a>
                    </div>
                    {{/if}}
                </td>
                <td>
                    <img src="static/images/amount.png" alt="">
                    <p>лв {{this.total}}</p>
                </td>
                <td>
                    <img src="static/images/category.png" alt="">
                    <p>{{this.category}}</p>
                </td>
                <td>
                    <img src="static/images/hastag.png" alt="">
                    <p>{{this.description}}</p>
                </td>
            </tr>
            {{/each}}

        </tbody>
    </table>
    {{else}}
    <h1 class="no-expenses">No expenses founded so far.. <span>GOOD JOB!</span></h1>
    {{/if}}
</main>
<a href="/"> &uarr; Back to top &uarr;</a>